<h1 class="text-center my-4">Update Employer</h1>

<div class="container">
  <%= form_for @employer, html: { class: 'form-horizontal' } do |f| %>

    <div class="form-group row">
      <%= f.label :name, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :position, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :position, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :salary, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :salary, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= f.submit 'Update Employer', class: 'btn btn-primary' %>
      </div>
    </div>

  <% end %>
</div>
