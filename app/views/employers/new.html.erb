<h1 class="text-center my-4">Add Employer</h1>

<div class="container">
  <%= form_for @employer, html: { class: 'form-horizontal' } do |f| %>

    <% if @employer.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@employer.errors.count, "error") %> prohibited this employer from being saved:</h4>
        <ul>
          <% @employer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <%= f.label :name, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Enter employer name' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :position, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :position, class: 'form-control', placeholder: 'Enter position' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :salary, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= f.text_field :salary, class: 'form-control', placeholder: 'Enter salary' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= f.submit 'Add Employer', class: 'btn btn-success' %>
        <%= link_to 'Back', employers_path, class: 'btn btn-secondary' %>
      </div>
    </div>

  <% end %>
</div>
